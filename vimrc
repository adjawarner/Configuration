set nocompatible
set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab
set backspace=indent,eol,start

set ai
set si
filetype plugin indent on

set number
set scrolloff=3
set numberwidth=4
set cursorline

set ruler
set background=dark
syntax on

colorscheme koehler

imap jj <Esc>
imap hh =>
set showcmd

